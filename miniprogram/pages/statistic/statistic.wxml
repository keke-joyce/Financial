<!--pages/statistic/statistic.wxml-->
<!-- <text>pages/statistic/statistic.wxml</text> -->
<picker bindchange="bindPickerChange" value="{{index}}" range="{{array1}}" class="select">
  {{index===0?currentMonth:array1[index]}}月 <image src="../../images/select.png"></image>
</picker>
<view class='tabs'>
  <view class='tabs-box'>
    <block wx:for="{{['支出','收入']}}" wx:key="index">
      <view class="tabs-item {{currentTabIndex == index ? 'selected' : '' }}" bindtap='onTabsItemTap'
        data-index='{{index}}'>
        {{item}}
      </view>
    </block>
  </view>
  <view class='ordert-detail'>
    <view >
      <!-- <out-statistic></out-statistic> -->
      <view class="container">
        <text>支出统计</text>
        <ec-canvas id="expendLineChart" class="ec-canvas" canvas-id="mychart-line" ec="{{ ec }}"></ec-canvas>
        <ec-canvas id="expendPieChart" class="ec-canvas" canvas-id="mychart-pie" ec="{{ ec1 }}"></ec-canvas>
      </view>
    </view>
    <view  hidden="{{currentTabIndex !== 1}}">
      <view class="container">
        <text>收入统计</text>
        <ec-canvas id="incomeLineChart" class="ec-canvas" canvas-id="mychart-line" ec="{{ ec }}"></ec-canvas>
        <ec-canvas id="incomePieChart" class="ec-canvas" canvas-id="mychart-pie" ec="{{ ec1 }}"></ec-canvas>
      </view>
      <!-- <in-statistic></in-statistic> -->
    </view>
  </view>
</view>