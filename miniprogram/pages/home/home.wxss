/* pages/home/home.wxss */
.main{
height: 100vh;
background-color: #F2F0F6;
}

.main .top{
height: 5%;
margin-left: 5px;
}
.main .top .select image{
width: 20px;
height: 20px;
background-size: 100% 100%;
}
.main .search{
  height: 5%;
  width: 90%;
  margin:0 auto;
  border-radius: 10px ;
  background-color: #E9EAEE;
  /* box-shadow: 2px 2px 2px 2px #ccc; */
  overflow: hidden; 
}
.main .search input{
  width: 85%;
  height: 100%;
  margin-left: 3%;
  float: left;
}
.main .search image{
  float: left;  
  width: 32px;
  height: 30px;
}
.main .head{
  width: 90%;
  height: 15%;
  margin:1% auto;
  border-radius: 5px ;
  background-color: white;
  /* box-shadow: 2px 2px 2px 2px #ccc; */
}
.main .head .head_store{
  font-size: 24px;
  font-weight: bold;
}
.main .head .head_store text{
  font-size: 16px;
  margin: 10px 30% 0 30px;
  margin-left: 30%;
  margin-right: 30px;
}
.main .head .head_income{
  width: 45%;
  float: left;
  margin: 7% 2%;
}
.main .head .head_spand{
  width:45%;
  float: left;
  margin: 7% 2%;
}
.main .head .head_income text{
  font-size: 14px;
  color: white;
  background-color: #FD9491;
  border-radius: 10px;

}
.main .head .head_spand text{
  font-size: 14px;
  background-color: #64b0e7;
  border-radius: 10px;
  color: white;
}
.main .content{
  width: 90%;
  height: 73%;
  margin:1% auto;
}
.main .content .content-info{
  /* margin: 0 auto; */
  height: 8%;
}
.main .content .content-info .row{
  width: 100%;
  height: 10vh;
  /* box-shadow: 1px 1px 1px 1px #ccc; */
  margin: 3% auto;
  /* border-radius: 5px ; */
  display: flex;
  align-items: center;
  background-color: white;
}
.main .content .content-info .row .info-left,.info-right{
  font-size: 30rpx;
 
}
.main .content .content-info .row .info-left{
  width: 40px;
  height: 40px;
  border-radius: 5px;
  margin-left:5px;
}
.main .content .content-info .row .info-left image{
  width: 40px;
  height: 40px;
  background-size: 100% 100%;
}
.main .content .content-info .row .info-right{
  width: 80%;
  height: 80%;
  margin-left: 10px;
  /* display: flex;
  justify-content: space-around; */
  overflow: hidden;
}
.main .content .content-info .row .info-right .info-one,.info-two{
  color:#5a5959;
  float: left;
  font-size: 14px;
}
.main .content .content-info .row .info-right .info-two{
  float: right;
}
.main .content .content-info .row .info-right .info:nth-child(1){
  font-size: 18px;
  font-weight: bold;

}
.main .content .add-info{
  width: 64px;
  height: 64px;
}
.main .content .add-info image{
  width: 64px;
  height: 64px;
  position: fixed;
  bottom: 10px;
  right: 10px;
}
.main .digit{
  border:1px solid black;
  height: 100px;
}
